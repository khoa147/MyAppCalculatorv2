<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="222dp"
        android:layout_height="43dp"
        android:text="Calculalor"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="94dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:text="1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="195dp"
        android:text="2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button2"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="195dp"
        android:text="3" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button"
        android:layout_marginTop="-40dp"
        android:layout_marginBottom="-46dp"
        android:text="4" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignBottom="@+id/button2"
        android:layout_marginLeft="105dp"
        android:layout_marginBottom="-46dp"
        android:text="5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignBottom="@id/button3"
        android:layout_marginLeft="105dp"
        android:layout_marginBottom="-46dp"
        android:text="6" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button5"
        android:layout_marginBottom="-46dp"
        android:text="7" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/button7"
        android:layout_alignBottom="@id/button5"
        android:layout_marginLeft="105dp"
        android:layout_marginBottom="-46dp"
        android:text="8" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/button8"
        android:layout_alignBottom="@id/button6"
        android:layout_marginLeft="105dp"
        android:layout_marginBottom="-46dp"
        android:text="9" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button7"
        android:layout_marginBottom="-46dp"
        android:text="0" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/button10"
        android:layout_alignBottom="@id/button8"
        android:layout_marginLeft="105dp"
        android:layout_marginBottom="-46dp"
        android:text="Result" />

    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/button11"
        android:layout_alignBottom="@id/button9"
        android:layout_marginLeft="105dp"
        android:layout_marginBottom="-46dp"
        android:text="Reset" />

    <Button
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/button3"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="195dp"
        android:text="+" />

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/button6"
        android:layout_alignBottom="@id/button13"
        android:layout_marginLeft="105dp"
        android:layout_marginBottom="-46dp"
        android:text="-"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/button9"
        android:layout_alignBottom="@id/button14"
        android:layout_marginLeft="105dp"
        android:layout_marginBottom="-46dp"
        android:text="*" />

    <Button
        android:id="@+id/button16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/button12"
        android:layout_alignBottom="@id/button15"
        android:layout_marginLeft="105dp"
        android:layout_marginBottom="-46dp"
        android:text="/" />

</RelativeLayout>